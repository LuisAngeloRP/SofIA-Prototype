# SofIA Finance Advisor - Configuración de Entorno

# ===== API Keys Requeridas =====
PERPLEXITY_API_KEY=tu_api_key_aqui

# ===== Configuración de Plataformas =====
# Habilitar/deshabilitar plataformas específicas
ENABLE_WHATSAPP=true
ENABLE_WEB=true

# ===== Configuración de Logs =====
# development = logs detallados de conexiones WebSocket
# production = logs resumidos cada 5 minutos
NODE_ENV=production

# ===== Configuración Web API =====
API_PORT=3001
WEBAPP_URL=http://localhost:3000

# ===== Configuración NextJS (opcional) =====
NEXT_PUBLIC_API_URL=http://localhost:3001

# Configuración opcional
SOFIA_DEBUG_MODE=false
SOFIA_MAX_TOKENS=1500
SOFIA_SEARCH_CONTEXT_SIZE=medium 